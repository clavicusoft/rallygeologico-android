<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitXY"
        android:src="@drawable/fondomain" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

            <TextView
                android:layout_marginTop="112dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:text="RG"
                android:textColor="@color/Gris_5"
                android:textSize="80dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Una aventura educativa"
                android:textSize="20sp"
                />

        <Button
            android:layout_marginTop="190dp"
            android:id="@+id/btn_inicio"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/buttonstyle"
            android:gravity="center"
            android:text="INICIAR"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            >

            <ImageView
                android:id="@+id/iv_logoci"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="7dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/logoci" />

            <ImageView
                android:id="@+id/iv_logoarea"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                app:srcCompat="@drawable/logoareaconservacion" />

            <ImageView
                android:id="@+id/iv_logoucr"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:scaleType="fitXY"
                android:src="@drawable/firma_ucr" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>