<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".termino"
    android:background="@color/Blanco"
    >

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="0dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/media_imagenPunto"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    />

                <TextView
                    android:id="@+id/media_nombrePunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="28dp"
                    android:textColor="#666666"
                    android:textSize="22dp"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/media_numeroPunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#999999"
                    android:textSize="18dp"
                    android:gravity="center"/>


                <TextView
                    android:id="@+id/media_distanciaPunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:textColor="#666666"
                    android:textSize="18dp"
                    android:gravity="center"/>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#CCCCCC"

                    />

                <TextView
                    android:id="@+id/media_secretoPunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:textColor="#609000"
                    android:textSize="20dp"

                    />

                <TextView
                    android:id="@+id/media_geopuntosPunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:textColor="#E46305"
                    android:textSize="18dp"

                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:background="#CCCCCC"

                    />


                <TextView
                    android:id="@+id/media_informacionPunto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#666666"
                    android:textSize="18dp"

                    />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#CCCCCC"

                    />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</FrameLayout>